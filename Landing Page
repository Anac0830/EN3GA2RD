  <script>
    function mostrarFormulario() {
      const tipo = document.getElementById('userType').value;
      document.getElementById('freelancerForm').classList.add('hidden');
      document.getElementById('empresaForm').classList.add('hidden');
      if (tipo === 'freelancer') {
        document.getElementById('freelancerForm').classList.remove('hidden');
      } else if (tipo === 'empresa') {
        document.getElementById('empresaForm').classList.remove('hidden');
      }
    }

    function mostrarTransporte(valor) {
      const transporteDiv = document.getElementById('transporteOpciones');
      const otroDiv = document.getElementById('otroTrabajo');
      transporteDiv.classList.add('hidden');
      otroDiv.classList.add('hidden');
      if (valor === 'Repartidor') {
        transporteDiv.classList.remove('hidden');
      } else if (valor === 'Otro') {
        otroDiv.classList.remove('hidden');
      }
    }
  </script>
